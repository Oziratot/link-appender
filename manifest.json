{
    "name": "Link Appender",
    "description": "Appends the highlighted text to the link and opens it in new tab",
    "version": "0.1",
    "manifest_version": 2,
    "permissions": ["activeTab", "storage"],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "browser_action": {
      "default_popup": "popup.html"
    },
    "commands": {
      "_execute_browser_action": {
        "suggested_key": {
          "default": "Ctrl+Shift+X"
        }
      }
    },
    "icons": {
        "16": "./icons/appender-16.png",
        "32": "./icons/appender-32.png",
        "48": "./icons/appender-64.png",
        "128": "./icons/appender-128.png"
        }
}